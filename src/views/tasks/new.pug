extends /layouts/application.pug

block content
  h1 New Task
  +formFor(f, { url: urlFor('tasks'), method: 'post' })
    +input(f, 'name')
    +select(f, 'status', 'statuses')
    +input(f, 'description')
    +input(f, 'tags')
    div.form-group
      input.form-control(hidden name='form[creator]' value=getUserId())
    +select(f, 'assignedTo', 'users')
    +button(f)
