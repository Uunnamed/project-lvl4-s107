extends /layouts/application.pug

block content
  h1 Edit Task
  +formFor(f, { url: urlFor('updateTask', f.object.id), method: 'POST' })
    div.form-group
      input.form-control(hidden name='_method' value='PUT')
    +input(f, 'name')
    +select(f, 'status', 'statuses')
    +input(f, 'description')
    +select(f, 'creator', 'users')
    +select(f, 'assignedTo', 'users')
    +button(f)
